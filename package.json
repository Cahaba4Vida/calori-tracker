[build]
  command = "echo \"No build step\"" 
  publish = "."
  functions = "netlify/functions"

[[redirects]]
  from = "/api/*"
  to = "/.netlify/functions/:splat"
  status = 200

[functions."scheduled-reconcile-subscriptions"]
  schedule = "0 * * * *"

[[redirects]]
  from = "/privacy"
  to = "/privacy.html"
  status = 200

[[redirects]]
  from = "/delete-account"
  to = "/delete-account.html"
  status = 200

[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
